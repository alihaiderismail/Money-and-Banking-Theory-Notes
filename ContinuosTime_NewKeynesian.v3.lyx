\begin_layout Plain Layout
We factor out the aggregate price level 
\begin_inset Formula $P_{\tau}$
\end_inset

 from the instantaneous return.
\begin_inset Formula 
\[
G\left(n,t\right)=\max_{\left\{ v_{\tau}\right\} }\int_{t}^{\infty}\frac{\exp\left(-\rho\tau\right)}{P_{\tau}}\left(p_{\tau}^{i}n_{\tau}-w_{\tau}n_{\tau}-v_{\tau}\mu P_{\tau}\right)d\tau,
\]

\end_inset


\begin_inset Formula 
\[
s.t.\quad\dot{n}_{\tau}=j_{\tau}v_{\tau}-\xi n_{\tau}
\]

\end_inset


\end_layout

\end_inset


\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
Then, we use the fact that:
\begin_inset Formula 
\[
P_{\tau}=P_{t}\exp\left(\int_{t}^{\tau}\pi_{s}ds\right),
\]

\end_inset

to express the objective as:
\begin_inset Formula 
\[
G\left(n,t\right)P_{t}=\max_{\left\{ v_{\tau}\right\} }\int_{t}^{\infty}\exp\left(\int_{t}^{\tau}\left(-\pi_{s}-\rho\right)ds\right)\left(p_{\tau}^{i}n_{\tau}-w_{\tau}n_{\tau}-v_{\tau}\mu P_{\tau}\right)d\tau.
\]

\end_inset


\begin_inset Formula 
\[
s.t.\quad\dot{n}_{\tau}=j_{\tau}v_{\tau}-\xi n_{\tau}
\]

\end_inset


\end_layout

\end_inset

This expression leads to the following HJB equation for the intermediate
 good firm.
 The corresponding equation is:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\rho G\left(n,t\right)=\max_{\left\{ v_{t}\right\} }\left(\frac{p_{t}^{i}}{P_{t}}-\frac{w_{t}}{P_{t}}\right)n_{t}-v_{t}\mu+G_{n}\dot{n}_{t}+\dot{G}.
\]

\end_inset


\begin_inset Formula 
\[
s.t.\quad\dot{n}_{t}=j_{t}v_{t}-\xi n_{t}
\]

\end_inset

And substituting the law of motion obtains: 
\begin_inset Formula 
\[
\rho G\left(n,t\right)=\max_{\left\{ v_{t}\right\} }\left(\frac{p_{t}^{i}}{P_{t}}-\frac{w_{t}}{P_{t}}\right)n_{t}-v_{t}\mu+G_{n}\left(j_{t}v_{t}-\xi n_{t}\right)+\dot{G}.
\]

\end_inset

The first-order condition with respect to 
\begin_inset Formula $v_{t}$
\end_inset

 is: 
\begin_inset Formula 
\[
-\mu+G_{n}j_{t}=0
\]

\end_inset


\begin_inset Formula 
\begin{equation}
\Longleftrightarrow j_{t}G_{n}=\mu.\label{eq:foc-2}
\end{equation}

\end_inset


\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
The derivative with respect to time give us
\begin_inset Formula 
\[
\left(\dot{G}_{n}+G_{nn}\dot{n}\right)j_{t}+G_{n}\dot{j}_{t}=\mu\dot{P}_{t}
\]

\end_inset

By using 
\begin_inset Formula $\dot{n}_{t}=j_{t}v_{t}-\xi n_{t}$
\end_inset

, we get
\begin_inset Formula 
\[
\dot{G}_{n}+G_{nn}\left(j_{t}v_{t}-\xi n_{t}\right)+G_{n}\frac{\dot{j}_{t}}{j_{t}}=\frac{\mu}{j_{t}}\dot{P}_{t}
\]

\end_inset


\begin_inset Formula 
\begin{equation}
\Longleftrightarrow\dot{G}_{n}+G_{nn}\left(j_{t}v_{t}-\xi n_{t}\right)=\frac{\mu}{j_{t}}\dot{P}_{t}-G_{n}\frac{\dot{j}_{t}}{j_{t}}\label{eq:time.variation-2}
\end{equation}

\end_inset

The envelop condition give us
\begin_inset Formula 
\begin{equation}
\left(\rho+\pi_{t}\right)G_{n}=p_{t}^{i}-w_{t}-G_{n}\xi+G_{nn}\left(j_{t}v_{t}-\xi n_{t}\right)+\dot{G}_{n}.\label{eq:envelope-2}
\end{equation}

\end_inset

Substituting (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:time.variation-2"
plural "false"
caps "false"
noprefix "false"

\end_inset

) and (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:foc-2"
plural "false"
caps "false"
noprefix "false"

\end_inset

) into (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:envelope-2"
plural "false"
caps "false"
noprefix "false"

\end_inset

), we obtain:
\begin_inset Formula 
\[
\left(\rho+\pi_{t}\right)\frac{\mu P_{t}}{j_{t}}=p_{t}^{i}-w_{t}-\frac{\mu P_{t}}{j_{t}}\xi+\frac{\mu}{j_{t}}\dot{P}_{t}-\frac{\mu P_{t}}{j_{t}}\frac{\dot{j}_{t}}{j_{t}}.
\]

\end_inset


\begin_inset Formula 
\[
\Longleftrightarrow\left(\rho+\pi_{t}\right)\frac{\mu}{j_{t}}=\frac{p_{t}^{i}}{P_{t}}-\frac{w_{t}}{P_{t}}-\frac{\mu}{j_{t}}\xi+\frac{\mu}{j_{t}}\underbrace{\frac{\dot{P}_{t}}{P_{t}}}_{\dot{\pi}_{t}}-\frac{\mu}{j_{t}}\frac{\dot{j}_{t}}{j_{t}}.
\]

\end_inset


\begin_inset Formula 
\[
\Longleftrightarrow\rho\frac{\mu}{j_{t}}=\frac{p_{t}^{i}}{P_{t}}-\frac{w_{t}}{P_{t}}-\frac{\mu}{j_{t}}\xi-\frac{\mu}{j_{t}}\frac{\dot{j}_{t}}{j_{t}}.
\]

\end_inset


\begin_inset Formula 
\[
\Longleftrightarrow\frac{p_{t}^{i}}{P_{t}}=\rho\frac{\mu}{j_{t}}+\frac{w_{t}}{P_{t}}+\frac{\mu}{j_{t}}\xi+\frac{\mu}{j_{t}}\frac{\dot{j}_{t}}{j_{t}}.
\]

\end_inset


\begin_inset Formula 
\begin{align}
\Longleftrightarrow\frac{p_{t}^{i}}{P_{t}}-\frac{w_{t}}{P_{t}} & =\rho\frac{\mu}{j_{t}}+\frac{\mu}{j_{t}}\xi+\frac{\mu}{j_{t}}\frac{\dot{j}_{t}}{j_{t}}\nonumber \\
 & =\frac{\mu}{j_{t}}\left(\rho+\xi\right)+\frac{\mu}{j_{t}}\frac{\dot{j}_{t}}{j_{t}}\label{eq:labor-1}
\end{align}

\end_inset


\end_layout

\end_inset

We conjecture the value function as follows:
\begin_inset Formula 
\begin{equation}
G\left(n,t\right)=g\left(t\right)n_{t}\label{eq:value_function_guess}
\end{equation}

\end_inset

We verify this guess later.
 Under this assumption, we have
\begin_inset Formula 
\[
G_{n}=\frac{\mu}{j_{t}}
\]

\end_inset


\begin_inset Formula 
\begin{equation}
\Longleftrightarrow g\left(t\right)=\frac{\mu}{j_{t}}\label{eq:small-g}
\end{equation}

\end_inset

This relationship which must hold in a solution with finite vacancies.
 Then, We replace the condition into the HJB equation and using our guess
 obtain:
\begin_inset Formula 
\[
\left(\rho+\xi\right)g\left(t\right)n_{t}=\left(\frac{p_{t}^{i}}{P_{t}}-\frac{w_{t}}{P_{t}}\right)n_{t}+\dot{g}\left(t\right)n_{t},
\]

\end_inset

which verifies the conjecture.
 Hence, we obtain:
\begin_inset Formula 
\[
\left(\rho+\xi\right)g\left(t\right)n_{t}=\left(\frac{p_{t}^{i}}{P_{t}}-\frac{w_{t}}{P_{t}}\right)+\dot{g}\left(t\right),
\]

\end_inset

and we compute its integral solution.
\begin_inset Formula 
\[
g\left(t\right)=\int_{t}^{\infty}\exp\left(-\left(\tau-t\right)\left(\rho+\xi\right)\right)\left(\frac{p_{\tau}^{i}}{P_{\tau}}-\frac{w_{\tau}}{P_{\tau}}\right)d\tau.
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
By taking the derivative with respect to time, we get
\begin_inset Formula 
\[
\]

\end_inset


\begin_inset Formula 
\begin{equation}
\Longleftrightarrow\dot{g}\left(t\right)=-\frac{\mu}{j_{t}}\frac{\dot{j_{t}}}{j_{t}}.\label{eq:time.variation-3}
\end{equation}

\end_inset


\end_layout

\begin_layout Plain Layout
In turn, substituting (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:small-g"
plural "false"
caps "false"
noprefix "false"

\end_inset

) into (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:time.variation-3"
plural "false"
caps "false"
noprefix "false"

\end_inset

) we obtain:
\begin_inset Formula 
\begin{equation}
\dot{g}\left(t\right)=\frac{g\left(t\right)}{P_{t}}\left(\rho+\xi\right)-\frac{\dot{g}\left(t\right)}{P_{t}}+\frac{\dot{P}_{t}}{P_{t}^{2}}g\left(t\right)\label{eq:forward-g}
\end{equation}

\end_inset

We know 
\begin_inset Formula $\frac{\dot{P}_{t}}{P_{t}}=\pi_{t}$
\end_inset

.
 Therefore, we get
\begin_inset Formula 
\begin{align*}
\Longleftrightarrow p_{t}^{i}-w_{t}+\dot{g}\left(t\right) & =g\left(t\right)\left(\rho+\xi\right)+\pi_{t}g\left(t\right)\\
 & =g\left(t\right)\left(\rho+\xi+\pi_{t}\right)
\end{align*}

\end_inset


\begin_inset Formula 
\[
\Longleftrightarrow g\left(t\right)=\int_{t}^{\infty}\exp\left(-\int_{t}^{\tau}\left(\rho+\xi+\pi_{s}\right)ds\right)\left(p_{\tau}^{i}-w_{\tau}\right)d\tau
\]

\end_inset

Then, we use the fact that:
\begin_inset Formula 
\[
P_{\tau}=P_{t}\exp\left(\int_{t}^{\tau}\pi_{s}ds\right),
\]

\end_inset


\begin_inset Formula 
\[
\Longleftrightarrow P_{\tau}^{-1}=P_{t}^{-1}\exp\left(-\int_{t}^{\tau}\pi_{s}ds\right),
\]

\end_inset

Now we get
\begin_inset Formula 
\[
g\left(t\right)P_{t}^{-1}=\int_{t}^{\infty}P_{t}^{-1}\exp\left(\int_{t}^{\tau}\left(-\rho-\xi-\pi_{s}\right)ds\right)\left(p_{\tau}^{i}-w_{\tau}\right)d\tau
\]

\end_inset


\begin_inset Formula 
\[
\Longleftrightarrow g\left(t\right)P_{t}^{-1}=\int_{t}^{\infty}\exp\left(\int_{t}^{\tau}\left(-\rho-\xi\right)ds\right)\left(P_{\tau}^{-1}p_{\tau}^{i}-P_{\tau}^{-1}w_{\tau}\right)d\tau
\]

\end_inset


\begin_inset Formula 
\[
\Longleftrightarrow g\left(t\right)=\int_{t}^{\infty}\exp\left(-\left(\tau-t\right)\left(\rho+\xi\right)\right)\left(\frac{p_{\tau}^{i}}{P_{\tau}}-\frac{w_{\tau}}{P_{\tau}}\right)d\tau.
\]

\end_inset

This equation says that the real value of each worker is the net present
 value of real profits generated by the worker generate discounted at 
\begin_inset Formula $\rho$
\end_inset

 scaled by 
\begin_inset Formula $\xi$
\end_inset

 which is the probability of job separation.
\end_layout

\end_inset


\end_layout

\begin_layout Standard
Assuming an ex-post hold up problem by workers in the intermediate firm,
 we obtain that 
\begin_inset Formula $\frac{w_{\tau}}{P_{\tau}}=\eta\frac{p_{\tau}^{i}}{P_{\tau}}$
\end_inset

 because of the holdup problem.
 Under this assumption, the real value of each worker is given by
\begin_inset Formula 
\[
g\left(t\right)=\int_{t}^{\infty}\exp\left(-\left(\tau-t\right)\left(\rho+\xi\right)\right)\left(1-\eta\right)\frac{p_{\tau}^{i}}{P_{\tau}}d\tau
\]

\end_inset

 Using the definition of marginal cost relative to final goods, 
\begin_inset Formula $mc_{t}\equiv\frac{p_{t}^{i}}{P_{t}}$
\end_inset

, we get
\begin_inset Formula 
\[
g\left(t\right)=\int_{t}^{\infty}\exp\left(-\left(\tau-t\right)\left(\rho+\xi\right)\right)\left(1-\eta\right)mc_{\tau}d\tau
\]

\end_inset


\end_layout

