\begin_layout Paragraph*
Derivation of the Retailers of Phillips Curve.
 
\end_layout

\begin_layout Standard
We factor out the aggregate price level 
\begin_inset Formula $P_{\tau}$
\end_inset

 from the instantaneous return in the expression 
\begin_inset Formula $q\left(p,t\right)$
\end_inset

.
 With this, we obtain:
\begin_inset Formula 
\[
q\left(p,t\right)=\max_{\left\{ \dot{p}_{j,\tau}\right\} }\int_{t}^{\infty}\frac{\exp\left(-\rho\tau\right)}{P_{\tau}}\left(\left(p_{j,\tau}-p_{t}^{i}\right)y_{j,\tau}-P_{\tau}\frac{\Theta}{2}\left(\frac{\dot{p}_{j,\tau}}{p_{j,\tau}}\right)^{2}Y_{\tau}\right)d\tau,
\]

\end_inset


\begin_inset Formula 
\[
s.t.\quad y_{j,\tau}=p_{j,t}^{-\epsilon}P_{t}^{\epsilon}Y_{t}
\]

\end_inset

Then, we use the fact that:
\begin_inset Formula 
\[
P_{\tau}=P_{t}\exp\left(\int_{t}^{\tau}\pi_{s}ds\right),
\]

\end_inset

to express the objective as:
\begin_inset Formula 
\[
q\left(p,t\right)P_{t}=\max_{\left\{ \dot{p}_{j,\tau}\right\} }\int_{t}^{\infty}\exp\left(\int_{t}^{\tau}\left(-\pi_{s}-\rho\right)ds\right)\left(\left(p_{j,\tau}-p_{t}^{i}\right)y_{j,\tau}-P_{\tau}\frac{\Theta}{2}\left(\frac{\dot{p}_{j,\tau}}{p_{j,\tau}}\right)^{2}Y_{\tau}\right)d\tau.
\]

\end_inset


\begin_inset Formula 
\[
s.t.\quad y_{j,\tau}=p_{j,t}^{-\epsilon}P_{t}^{\epsilon}Y_{t}
\]

\end_inset

This expression leads to the following HJB equation for the nominal value
 of the manager's problem, 
\begin_inset Formula $Q\left(p,t\right)\equiv q\left(p,t\right)P_{t}.$
\end_inset

 The corresponding equation is:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\rho+\pi_{t}\right)Q\left(p,t\right)=\max_{\left\{ \dot{p}_{j,t}\right\} }\left(p_{j,t}-p_{t}^{i}\right)p_{j,t}^{-\epsilon}P_{t}^{\epsilon}Y_{t}-P_{t}\frac{\Theta}{2}\left(\frac{\dot{p}_{j,t}}{p_{j,t}}\right)^{2}Y_{t}+Q_{p}\dot{p}_{j,t}+\dot{Q}.
\]

\end_inset

Next, we obtain the first-order condition:
\begin_inset Formula 
\begin{equation}
Q_{p}-\Theta\frac{\dot{p}_{j,t}}{p_{j,t}^{2}}P_{t}Y_{t}=0.\label{eq:foc-1}
\end{equation}

\end_inset

Deriving this condition with respect to time yields:
\begin_inset Formula 
\begin{equation}
Q_{pp}\dot{p}+\dot{Q}_{p}=\Theta\left(\frac{\ddot{p}_{j,t}}{p_{j,t}^{2}}P_{t}Y_{t}-2\left(\frac{\dot{p}_{j,t}}{p_{j,t}}\right)^{2}\frac{P_{t}}{p_{j,t}}Y_{t}\right)+\Theta\frac{\dot{p}_{j,t}}{p_{j,t}^{2}}\dot{P_{t}}Y_{t}+\Theta\frac{\dot{p}_{j,t}}{p_{j,t}^{2}}P_{t}\dot{Y_{t}}.\label{eq:time.variation-1}
\end{equation}

\end_inset

Next, we produce the envelope condition.
 For that, we take the derivative of 
\begin_inset Formula $Q\left(p,t\right)$
\end_inset

 with respect to the individual price 
\begin_inset Formula $p_{j}$
\end_inset

.
 We obtain: 
\begin_inset Formula 
\begin{equation}
\left(\rho+\pi_{t}\right)Q_{p}=-\epsilon\left(p_{j,t}-p_{t}^{i}\right)p_{j,t}^{-\epsilon-1}P_{t}^{\epsilon}Y_{t}+p_{j,t}^{-\epsilon}P_{t}^{\epsilon}Y_{t}+\Theta\left(\frac{\dot{p}_{j,t}}{p_{j,t}}\right)^{2}\frac{P_{t}}{p_{j,t}}Y_{t}+Q_{pp}\dot{p}_{j,t}+\dot{Q}_{p}.\label{eq:envelope-1}
\end{equation}

\end_inset

Substituting (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:time.variation-1"
plural "false"
caps "false"
noprefix "false"

\end_inset

) and (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:foc-1"
plural "false"
caps "false"
noprefix "false"

\end_inset

) into (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:envelope-1"
plural "false"
caps "false"
noprefix "false"

\end_inset

), we obtain:
\begin_inset Formula 
\[
\left(\rho+\pi_{t}\right)\Theta\frac{\dot{p}_{j,t}}{p_{j,t}^{2}}P_{t}Y_{t}=-\epsilon\left(p_{j,t}-p_{t}^{i}\right)p_{j,t}^{-1}y_{j,t}+y_{j,t}+\Theta\left(\frac{\dot{p}_{j,t}}{p_{j,t}}\right)^{2}\frac{P_{t}}{p_{j,t}}Y_{t}+\Theta\left(\frac{\ddot{p}_{j,t}}{p_{j,t}^{2}}P_{t}Y_{t}-2\left(\frac{\dot{p}_{j,t}}{p_{j,t}}\right)^{2}\frac{P_{t}}{p_{j,t}}Y_{t}\right)+\Theta\frac{\dot{p}_{j,t}}{p_{j,t}^{2}}\dot{P_{t}}Y_{t}+\Theta\frac{\dot{p}_{j,t}}{p_{j,t}^{2}}P_{t}\dot{Y_{t}}.
\]

\end_inset

Simplifying terms, we obtain:
\begin_inset Formula 
\[
\left(\rho+\pi_{t}\right)\Theta\frac{\dot{p}_{j,t}}{p_{j,t}^{2}}P_{t}Y_{t}=-\epsilon\left(p_{j,t}-p_{t}^{i}\right)p_{j,t}^{-1}y_{j,t}+y_{j,t}+\Theta\left(\frac{\ddot{p}_{j,t}}{p_{j,t}^{2}}P_{t}Y_{t}-\left(\frac{\dot{p}_{j,t}}{p_{j,t}}\right)^{2}\frac{P_{t}}{p_{j,t}}Y_{t}\right)+\Theta\frac{\dot{p}_{j,t}}{p_{j,t}^{2}}\dot{P_{t}}Y_{t}+\Theta\frac{\dot{p}_{j,t}}{p_{j,t}^{2}}P_{t}\dot{Y_{t}}.
\]

\end_inset

Now, using that all managers act identically, we substitute, 
\begin_inset Formula $p_{j,t}=P_{t}$
\end_inset

 and 
\begin_inset Formula $y_{j,t}=Y_{t}$
\end_inset

, and obtain:
\begin_inset Formula 
\begin{eqnarray*}
\left(\rho+\pi_{t}\right)\Theta\frac{\dot{P_{t}}}{P_{t}^{2}}P_{t}Y_{t} & = & -\epsilon\left(P_{t}-p_{t}^{i}\right)P_{t}^{-1}Y_{t}+Y_{t}+\Theta\left(\frac{\ddot{P_{t}}}{P_{t}^{2}}P_{t}Y_{t}-\left(\frac{\dot{P_{t}}}{P_{t}}\right)^{2}Y_{t}\right)+\Theta\frac{\dot{P_{t}}}{P_{t}^{2}}\dot{P_{t}}Y_{t}+\Theta\frac{\dot{P_{t}}}{P_{t}^{2}}P_{t}\dot{Y_{t}}.
\end{eqnarray*}

\end_inset

Recall that inflation and the price acceleration are:
\begin_inset Formula 
\[
\pi_{t}=\frac{\dot{P}_{t}}{P_{t}},
\]

\end_inset

and
\begin_inset Formula 
\[
\dot{\pi}_{t}=\left(\frac{\ddot{P_{t}}}{P_{t}}-\left(\frac{\dot{P_{t}}}{P_{t}}\right)^{2}\right).
\]

\end_inset

Replacing these conditions, in the condition above, we arrive that the following
 condition:
\begin_inset Formula 
\begin{eqnarray*}
\rho\Theta\pi_{t}Y_{t}+\Theta\pi_{t}^{2}Y_{t} & = & \left\{ 1-\epsilon\left(1-\frac{p_{t}^{i}}{P_{t}}\right)\right\} Y_{t}+\Theta\dot{\pi}_{t}Y_{t}+\Theta\pi_{t}^{2}Y_{t}+\Theta\pi_{t}\dot{Y}_{t}
\end{eqnarray*}

\end_inset

Equivalently
\begin_inset Formula 
\begin{eqnarray*}
\rho\pi_{t} & = & \frac{1-\epsilon\left(1-\frac{p_{t}^{i}}{P_{t}}\right)}{\Theta}+\dot{\pi}_{t}+\pi_{t}\frac{\dot{Y}_{t}}{Y_{t}}
\end{eqnarray*}

\end_inset

Denote 
\begin_inset Formula $mc_{t}\equiv\frac{p_{t}^{i}}{P_{t}}$
\end_inset

 which is real marginal cost for retailers.
 Then, we arrive at the Phillips curve:
\begin_inset Formula 
\begin{eqnarray*}
\left(\rho-\frac{\dot{Y}_{t}}{Y_{t}}\right)\pi_{t} & = & \frac{\epsilon}{\Theta}\left(\frac{1}{\epsilon}-1+mc_{t}\right)+\dot{\pi}_{t}
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\begin{eqnarray}
\Longleftrightarrow\left(\rho-\frac{\dot{Y}_{t}}{Y_{t}}\right)\pi_{t} & = & \frac{\epsilon}{\Theta}\left(mc_{t}-\frac{\epsilon-1}{\epsilon}\right)+\dot{\pi}_{t}\label{eq:NKPC}
\end{eqnarray}

\end_inset

In present value form, it is represented by
\begin_inset Formula 
\[
\pi_{t}=\frac{\epsilon}{\Theta}\int_{t}^{\infty}e^{-\left(s-t\right)\rho}\frac{Y_{s}}{Y_{t}}\left(mc_{s}-\frac{\epsilon-1}{\epsilon}\right)ds
\]

\end_inset


\end_layout

\begin_layout Standard
In the current framework, retailers make positive profits.
 Flow real profit in the symmetric equilibrium is given by
\begin_inset Formula 
\[
\left(\frac{p_{j,t}}{P_{t}}-\frac{p_{t}^{i}}{P_{t}}\right)y_{j,t}-\frac{\Theta}{2}\left(\frac{\dot{p}_{j,t}}{p_{j,t}}\right)^{2}Y_{t}=\left(1-mc_{t}-\frac{\Theta}{2}\pi_{t}^{2}\right)Y_{t}
\]

\end_inset

Following Schaab (2020), we assume that profits earned by retailers are
 paid out uniformly to all households, via the government's lump sum rebate
 
\begin_inset Formula $\tau_{t}^{lump}$
\end_inset

.
 
\end_layout

\begin_layout Paragraph
Derivation of the value per worker.
\end_layout

\begin_layout Standard
Substituting for output, we have that the maximization problem is
\begin_inset Formula 
\[
G\left(n,t\right)=\max_{\left\{ v_{\tau}\right\} }\int_{t}^{\infty}\exp\left(-\rho\tau\right)\left[\frac{p_{\tau}^{i}n_{\tau}}{P_{\tau}}-\frac{w_{\tau}}{P_{\tau}}n_{\tau}-v_{\tau}\mu\right]d\tau,
\]

\end_inset


\begin_inset Formula 
\[
s.t.\quad\dot{n}_{\tau}=j_{\tau}v_{\tau}-\xi n_{\tau}
\]

\end_inset


\begin_inset Note Note
